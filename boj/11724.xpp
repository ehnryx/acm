int n, m;
cin >> n >> m;
vector dsu(n+1, -1);
auto find = [&](auto&& self, int i) -> int {
  if(dsu[i] == -1) return i;
  return dsu[i] = self(self, dsu[i]);
};
auto link = [&](int i, int j) {
  i = find(find, i);
  j = find(find, j);
  if(i != j) dsu[i] = j;
};
for(int i=0; i<m; i++) {
  int a, b;
  cin >> a >> b;
  link(a, b);
}

int ans = 0;
for(int i=1; i<=n; i++) {
  ans += (find(find, i) == i);
}
cout << ans << nl;
